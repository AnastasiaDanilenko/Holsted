type
  TArrSt = array of string;
  TOperand = record
          operand: string;
          count: integer;
  end;
  TArrOp = array of TOperand;
  TArrInt = array of integer;
  TForm_Holsted = class(TForm)
    Memo_Text: TMemo;
    Label_Text: TLabel;
    Button_Download: TButton;
